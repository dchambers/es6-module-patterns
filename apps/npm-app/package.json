{
  "name": "@dchambers/npm-app",
  "version": "0.0.0",
  "description": "An NPM App.",
  "author": "Dominic Chambers",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build:module",
    "test": "npm run test:lint && npm run test:node && npm run test:browser",
    "build:module": "mkdirp dist && browserify src/app.js -t babelify -o dist/app.js",
    "test:lint": "eslint src test",
    "test:node": "mocha --compilers js:babel/register jsdom.js test",
    "test:browser": "karma start",
    "preserve": "npm run build:module",
    "serve": "http-server & watch-run -p 'src/**' npm run build:module"
  },
  "dependencies": {
    "@dchambers/es5-module": "^0.0.0",
    "@dchambers/es6-module": "^0.0.1"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "eslint": "^0.23.0",
    "http-server": "~0.8.0",
    "jsdom": "^3.1.2",
    "karma": "^0.12.37",
    "karma-browserify": "^4.2.1",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "watch-run": "^1.2.2"
  }
}
